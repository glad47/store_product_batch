<odoo>
    <record id="view_store_branch_form_simple" model="ir.ui.view">
        <field name="name">store.branch.form.simple</field>
        <field name="model">store.branch</field>
        <field name="arch" type="xml">
            <form string="Store Branch">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>

                    <group>
                        <field name="pos_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="location_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_store_branch_view" model="ir.actions.act_window">
        <field name="name">Store Branches</field>
        <field name="res_model">store.branch</field>
        <field name="view_mode">tree,form</field>
        <field name="groups_id" eval="[(4, ref('store_product_batch.group_store_batch_admin'))]"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create and manage your store branches here.
                </p>
        </field>
    </record>

    <record id="view_store_branch_search" model="ir.ui.view">
        <field name="name">store.branch.search</field>
        <field name="model">store.branch</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <filter string="Archived" name="archived" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>
    

</odoo>
