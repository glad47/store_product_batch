  <record id="view_store_batch_monthly_graph" model="ir.ui.view">
  <field name="name">store.batch.monthly.graph</field>
  <field name="model">store.batch</field>
  <field name="arch" type="xml">
    <graph string="Monthly Consumption by Product" type="line">
      <field name="start_time" type="row"/>
      <field name="consumed_qty" type="measure"/>
      <field name="product_ids" type="group"/>
      <field name="location_ids" type="group"/>
    </graph>
  </field>
</record>


  <record id="action_store_sale_graph" model="ir.actions.act_window">
    <field name="name">Sales Graph</field>
    <field name="res_model">store.batch</field>
    <field name="view_mode">graph</field>
    <field name="view_id" ref="view_store_batch_monthly_graph"/>
  </record>
</odoo>
