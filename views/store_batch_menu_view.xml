<odoo>
    <!-- Root Menu -->
      <record id="menu_store_root" model="ir.ui.menu">
      <field name="name">Store Product Tracker</field>
      </record>

      <!-- Batches: visible to both admin and user -->
      <record id="menu_store_batch" model="ir.ui.menu">
      <field name="name">Batches</field>
      <field name="parent_id" ref="menu_store_root"/>
      <field name="action" ref="action_store_batch"/>
      <field name="groups_id" eval="[(4, ref('store_product_batch.group_store_batch_admin')), (4, ref('store_product_batch.group_store_batch_user'))]"/>
      </record>

      <!-- Locations: admin only -->
      <record id="menu_store_location" model="ir.ui.menu">
      <field name="name">Locations</field>
      <field name="parent_id" ref="menu_store_root"/>
      <field name="action" ref="action_store_location"/>
      <field name="groups_id" eval="[(4, ref('store_product_batch.group_store_batch_admin'))]"/>
      </record>

      <!-- Branches: admin only -->
      <record id="menu_store_branch" model="ir.ui.menu">
      <field name="name">Branches</field>
      <field name="parent_id" ref="menu_store_root"/>
      <field name="action" ref="action_store_branch_view"/>
      <field name="groups_id" eval="[(4, ref('store_product_batch.group_store_batch_admin'))]"/>
      </record>

      <!-- Web Report: admin only -->
      <record id="menu_store_root_web_report" model="ir.ui.menu">
      <field name="name">Store Batch Report</field>
      <field name="parent_id" ref="menu_store_root"/>
      <field name="action" ref="action_store_batch_web_report"/>
      <field name="groups_id" eval="[(4, ref('store_product_batch.group_store_batch_admin'))]"/>
      </record>


      <menuitem id="menu_store_sale_graph"
          name="Sales Graph"
          parent="menu_store_root"
          action="action_store_sale_graph"/>


</odoo>