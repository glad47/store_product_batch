    <record id="view_store_batch_search" model="ir.ui.view">
        <field name="name">store.batch.search</field>
        <field name="model">store.batch</field>
        <field name="arch" type="xml">
            <search string="Batch Filters">
                <field name="name"/>
                <field name="product_ids"/>
                <field name="branch_id"/>
                <field name="location_ids"/>

                <filter string="All Batches" name="all_batches"
                        domain="['|', ('active', '=', True), ('active', '=', False)]"
                        context="{'default_all_batches': True}"/>
                <filter string="Active Batches" name="active"
                        domain="[('active', '=', True)]"/>
                <filter string="Inactive Batches" name="inactive"
                        domain="[('active', '=', False)]"/>

                <filter string="Started Today" name="today"
                        domain="[
                            '|', ('active', '=', False), ('active', '=', True),
                            ('start_time', '&gt;=', context_today())
                        ]"/>
                <filter string="Expired Batches" name="expired"
                        domain="[('active', '=', False), ('end_time', '&lt;=', context_today())]"/>
                <filter string="Ongoing Batches" name="ongoing"
                        domain="[('active', '=', True), ('start_time', '&lt;=', context_today())]"/>

                <group expand="0" string="Group By">
                    <filter string="Location" name="group_location"
                            context="{'group_by': 'location_ids'}"/>
                    <filter string="Product" name="group_product"
                            context="{'group_by': 'product_ids'}"/>
                    <filter string="Status" name="group_status"
                            context="{'group_by': 'active'}"/>
                    <filter string="Branch" name="group_branch"
                            context="{'group_by': 'branch_id'}"/>
                </group>
            </search>
        </field>
    </record>



    <record id="action_store_batch" model="ir.actions.act_window">
        <field name="name">Store Batches</field>
        <field name="res_model">store.batch</field>
        <field name="view_mode">tree,form</field>
        <field name="groups_id" eval="[(4, ref('store_product_batch.group_store_batch_admin'))]"/>
        <field name="context">{'search_default_all_batches': 1}</field>
        <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create and manage your store batch here.
                </p>
        </field>
    </record>




    <record id="action_run_batch_tracker_global" model="ir.actions.server">
        <field name="name">Run Batch Tracker</field>
        <field name="model_id" ref="model_store_batch"/>
        <field name="binding_model_id" ref="model_store_batch"/>
        <field name="state">code</field>
        <field name="code">
            model.action_refresh_batches_info()
        </field>
    </record>



   
</odoo>
