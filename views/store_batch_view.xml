<odoo>
    <record id="view_store_batch_form" model="ir.ui.view">
        <field name="name">store.batch.form</field>
        <field name="model">store.batch</field>
        <field name="arch" type="xml">
            <form string="Store Batch">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="branch_id"/> 
                        <field name="location_id" domain="[('branch_id', '=', branch_id)]"/>
                    </group>
                    <group>
                        <field name="start_time"/>
                        <field name="end_time"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_store_batch_tree" model="ir.ui.view">
        <field name="name">store.batch.tree</field>
        <field name="model">store.batch</field>
        
        <field name="arch" type="xml">
            <!-- <xpath expr="//tree" position="attributes">
               <attribute name="js_class">button_in_tree</attribute>
           </xpath> -->
            <tree string="Store Batches">
                <header>
                    <button name="action_refresh_batches_info"
                        type="object"
                        string="Update Batch Info"
                        icon="fa-refresh"
                        class="btn-secondary"
                        />
                </header>
                 
                <field name="name" width="120"/>
                <field name="product_id" width="150"/>
                <field name="branch_id"  width="150"/>
                <field name="location_id" width="150"/>
                <field name="start_time" width="150"/>
                <field name="end_time" width="150"/>
                <field name="consumed_qty" width="150"/>
                <field name="earned_amount" width="150"/>
                <field name="active" width="80"/>
                
            </tree>
        </field>
    </record>


    <record id="view_store_batch_search" model="ir.ui.view">
        <field name="name">store.batch.search</field>
        <field name="model">store.batch</field>
        <field name="arch" type="xml">
            <search string="Batch Filters">
                <!-- Searchable Fields -->
                <field name="name"/>
                <field name="product_id"/>
                <field name="branch_id"/>
                <field name="location_id"/>
                <!-- Status Filters -->
                <filter string="All Batches" name="all_batches" domain="['|', ('active', '=', True), ('active', '=', False)]" context="{'default_all_batches': True}"/>
                <filter string="Active Batches" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive Batches" name="inactive" domain="[('active', '=', False)]"/>
                

                <!-- Time-Based Filters -->
                <filter string="Started Today" name="today"
                    domain="[
                            '|', ('active', '=', False) , ('active', '=', True),
                            ('start_time', '&gt;=', context_today())
                        ]"/>
                <filter string="Expired Batches" name="expired"
                        domain="[('active', '=', False), ('end_time', '&lt;=', context_today())]"/>
                <filter string="Ongoing Batches" name="ongoing"
                        domain="[('active', '=', True), ('start_time', '&lt;=', context_today())]"/>


                <!-- Group By Section -->
                <group expand="0" string="Group By">
                    <filter string="Location" name="group_location" domain="['|', ('active', '=', True), ('active', '=', False)]" context="{'group_by': 'location_id'}"/>
                    <filter string="Product" name="group_product" domain="[]" context="{'group_by': 'product_id'}"/>
                    <filter string="Status" name="group_status" domain="[]" context="{'group_by': 'active'}"/>
                    <filter string="Branch" name="group_branch" domain="[]" context="{'group_by': 'branch_id'}"/>               
                </group>
            </search>

        </field>
    </record>


    <record id="action_store_batch" model="ir.actions.act_window">
        <field name="name">Store Batches</field>
        <field name="res_model">store.batch</field>
        <field name="view_mode">tree,form</field>
        <field name="groups_id" eval="[(4, ref('store_product_batch.group_store_batch_admin'))]"/>
        <field name="context">{'search_default_all_batches': 1}</field>
        <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create and manage your store batch here.
                </p>
        </field>
    </record>




